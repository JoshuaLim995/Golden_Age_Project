<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_assign_driver">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Driver Name -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/item_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Driver Name"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:editable="false"
                    android:onClick="showDriverPickerDialog"
                    />
            </android.support.design.widget.TextInputLayout>

            <!-- Patient Name -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/item_patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Patient Name"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:editable="false"
                    android:onClick="showPatientPickerDialog"
                    />
            </android.support.design.widget.TextInputLayout>


            <!-- Nurse Name -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_nurse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/item_nurse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nurse Name"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:editable="false"
                    android:onClick="showNursePickerDialog"
                    />
            </android.support.design.widget.TextInputLayout>


            <!-- Location -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/item_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:inputType="text"

                    />
            </android.support.design.widget.TextInputLayout>

            <!-- Description -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:inputType="text"
                    />
            </android.support.design.widget.TextInputLayout>

            <!-- Schedule date -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_schedule_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/item_schedule_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:editable="false"
                    android:onClick="showDatePickerDialog"
                    />

            </android.support.design.widget.TextInputLayout>


            <!-- Schedule time -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_schedule_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/ErrorText"
                app:hintTextAppearance="@style/HintText"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/item_schedule_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Time"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:editable="false"
                    android:onClick="showTimePickerDialog"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>